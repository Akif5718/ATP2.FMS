
@{
    ViewBag.Title = "EducationForm";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Bootstrap 101 Template</title>


    <link href="css/bootstrap.min.css" rel="stylesheet">






    <style>
        .dropdown:hover > .dropdown-menu {
            display: block;
        }
    </style>

    <title>Home</title>

</head>
<body>

    <br />
    <br />
@using (Html.BeginForm("EducationForm", "User"))
{
    <div class="row">

        <div class="col-md-3"></div>
        <div class="col-md-4">


            <form class="form-horizontal">
                <fieldset>
                    <br />
                    <br />
                    <i><h3 align="center">Educational Information</h3></i>
                    <hr />

                    <div class="form-group">
                        <label for="inputUserName" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            <input class="form-control" name="UserId" id="inputUserName" placeholder="Id" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputUserName" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            <input class="form-control" name="School" id="inputUserName" placeholder="School" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputUserName" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            <input class="form-control" name="Collage"  id="inputUserName" placeholder="Collage" type=" text">
                        </div>
                    </div>



                    <div class="form-group">
                        <label for="inputUserName" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            <input class="form-control" name="UniversityPost" id="inputUserName" placeholder="Post Graduate" type=" text">
                        </div>
                    </div>



                    <div class="form-group">
                        <label for="inputUserName" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            <input class="form-control" name="UniversityUnder" id="inputUserName" placeholder="Under Graduate" type=" text">
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputUserName" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            <input class="form-control" name="Others" id="inputUserName" placeholder="Others" type=" text">
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value=" Submit  " class="btn btn-default btn-block" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div align="right">

                            <button type="reset" class="btn btn-primary" onclick="">Next</button>
                        </div>
                    </div>
                </fieldset>
            </form>
            <hr>
            Already a Lance Bucket.com member?@Html.ActionLink("Login", "Login", "Account")
        </div>


        <div class="col-md-4"></div>
    </div>

}
    
    <br />
    <br />





    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
</body>
</html>
